%section#content
  %section#artist.col-xs-3{itemscope: '', itemtype: "http://schema.org/MusicGroup"}
    .artist
      .col-xs-3.cover
        = image_tag "#{@img_url}#{@artist["pic_medium"]}", title: @artist["desc"], alt: @artist["desc"]
      .col-xs-9.info
        %h2{itemprop: "name"}
          = @artist["desc"]
        - if @genres
          - @genres.each do |genre|
            %span.label.label-info= genre
        #bookmark_it
          - if @bookmark.persisted?
            = render 'bookmarks/destroy'
          - else
            = render 'bookmarks/form'


      .clearfix
    #accordion.panel-group.albums
      - @discography["item"].each_with_index do |album, index|
        .panel.panel-default.album
          .panel-heading
            %h4.panel-title
              .row
                .col-xs-2.cover
                  %a.accordion-toggle{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapse_#{index}"}
                    = image_tag "#{@img_url}#{album["cover"]}", title: album["desc"], alt: album["desc"]
                .col-xs-10.info
                  %a.accordion-toggle{"data-parent" => "#accordion", "data-toggle" => "collapse", href: "#collapse_#{index}"}
                    %h3= album["desc"]

          .panel-collapse.collapse{id: "collapse_#{index}", class: (index == 0 ? 'in' : '')}
            .panel-body
              %ol
                - album["discs"][0].each_with_index do |music, music_index|
                  %li.music_link{ data: { target: "#collapse_#{index}" }, class: (index == 0 && music_index == 0 ? 'active' : ''), itemprop: "track", itemscope: '', itemtype: "http://schema.org/MusicRecording" }
                    %a{data: { href: player_index_path(artist: @artist["desc"], music: music["desc"])} }
                      .song
                        .row
                          .col-xs-2
                            &nbsp;
                          .col-xs-10
                            %i.status.icon-music
                            %span.title{ itemprop: "name" }= music["desc"]
                            %meta{ itemprop: "url", content: artist_custom_url(@artist["desc"]) }
                            %meta{ itemprop: "audio", content: artist_custom_url(@artist["desc"]) }
                            %meta{ itemprop: "inAlbum", content: album["desc"] }
                            %meta{ itemprop: "duration", content: "PT4M5S" }
                          .clearfix

  %section#now-playing.col-xs-6
    .row
      .col-xs-12
        %section#song_info
          %header
            %h4
              %i.icon-spinner.icon-spin
              Carregando...
        %section#player
          #player_container
        .row
          .col-xs-8
            %section#social
              %br
              .plusone.pull-left
                .g-plusone{ data: { size: "medium" } }
              .twitter.pull-left
                %a{href: "https://twitter.com/share", class: "twitter-share-button", 'data-text' => "Ouvindo #{@artist['desc']} online pelo Alle Songs.", data: { lang: "en", size: "medium", count: "horizontal"}} Tweet
              .facebook.pull-left
                .fb-like{"data-action" => "recommend", "data-colorscheme" => "light", "data-height" => "24", "data-width" => "200", "data-href" => artist_root_url(@artist['desc'].gsub("&", "e").gsub("/", "+").gsub(' ', '+')), "data-layout" => "button_count", "data-send" => "true", "data-show-faces" => "true"}
              .clearfix
          .col-xs-4
            %br
            .btn-group.btn-group-justified
              %a.btn.btn-default#backward
                %i.icon-fast-backward
              %a.btn.btn-default#play_pause
                %i.icon-play
              %a.btn.btn-default#forward
                %i.icon-fast-forward
          .clearfix
          .col-xs-12
            %section#lyrics
              %br
              %article
                %header
                  %h4
              .row
                .col-xs-6
                  #lyric_text
                .col-xs-6
                  #translation_text

  %section#extra-info.col-xs-3
    %section#merchant
      = render 'layouts/adsense'
      -#%a{href: "http://www.greenpeace.com.br/cade/", target: "_blank"}
      -#  %img{src: "http://greenpeace.org.br/p3/transportes/banners/banner_net_cade_250x250_4.jpg"}

    %br

    - if @artist['related']
      %section#related_artists
        %h4
          %i.icon-plus
          Ouça também
        %ul
          - @artist['related'].each do |artist|
            %li{itemscope: '', itemtype: "http://schema.org/MusicGroup"}
              %meta{ itemprop: "name", content: artist['name'] }
              %meta{ itemprop: "image", content: "http://s2.vagalume.com#{artist['url']}images/profilew60.jpg" }
              %meta{ itemprop: "url", content: artist_custom_url(artist['name']) }
              = link_to artist_custom_path(artist['name']) do
                = image_tag "http://s2.vagalume.com#{artist['url']}images/profilew60.jpg", title: artist['name'], alt: artist['name']
                %span= artist['name']
    %br
    .fb-like-box{"data-colorscheme" => "light", "data-header" => "true", "data-height" => "271", "data-href" => "https://www.facebook.com/AlleSongs", "data-show-border" => "false", "data-show-faces" => "true", "data-stream" => "false", "data-width" => "300"}
    %br
    .fb-comments{ data: { colorscheme: :light, href: artist_custom_url(@artist["desc"]), numposts: 5, width: "300" } }
    %br
    = link_to "Visite também nossa página no Google +", "https://plus.google.com/117433632162037853658?rel=author"
