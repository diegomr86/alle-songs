.page-profile
  .profile-full-name
    %h1.text-semibold= @artist.name
  .profile-row
    .left-col
      .profile-block
        .panel.profile-photo
          = image_tag @artist.images['extralarge']
        %br/
        %a.btn.btn-default{:href => "#"}
          %i.fa.fa-play
          play
        %a.btn{:href => "#"}
          %i.fa.fa-indent
          add to playlist
      .panel.panel-transparent
        .panel-heading
          %span.panel-title About #{@artist.name}
        .panel-body
          = @artist.summary.gsub('http://www.last.fm/music', '').gsub('<a href="/Nirvana">Read more about Nirvana on Last.fm</a>.', '').html_safe
      .panel.panel-transparent
        .panel-heading
          %span.panel-title Statistics
        .list-group
          %a.list-group-item{:href => "#"}
            %strong= @artist.listenercount
            listeners
          %a.list-group-item{:href => "#"}
            %strong= @artist.playcount
            plays
      .panel.panel-transparent.profile-skills
        .panel-heading
          %span.panel-title Tags
        .panel-body
          - @artist.tags.each do |tag|
            %span.label.label-primary= tag
      .panel.panel-transparent
        .panel-heading
          %span.panel-title Social
        .list-group
          %a.list-group-item{:href => "#"}
            %i.profile-list-icon.fa.fa-twitter{:style => "color: #4ab6d5"}
            @dsteiner
          %a.list-group-item{:href => "#"}
            %i.profile-list-icon.fa.fa-facebook-square{:style => "color: #1a7ab9"}
            Denise Steiner
          %a.list-group-item{:href => "#"}
            %i.profile-list-icon.fa.fa-envelope{:style => "color: #888"}
            dsteiner@example.com
    .right-col
      %hr.profile-content-hr.no-grid-gutter-h/
      .profile-content
        %ul#profile-tabs.nav.nav-tabs
          %li.active
            %a{"data-toggle" => "tab", :href => "#profile-tabs-top-albums"} Top albums
          %li
            %a{"data-toggle" => "tab", :href => "#profile-tabs-top-tracks"} Top Tracks
          %li
            %a{"data-toggle" => "tab", :href => "#profile-tabs-events"} Events
          %li
            %a{"data-toggle" => "tab", :href => "#profile-tabs-similar"} Similar artists
        .tab-content.tab-content-bordered.panel-padding
          #profile-tabs-top-albums.tab-pane.fade.in.active
            %ul.grid.cs-style-3.row
              - @artist.top_albums(true).each do |album|
                %li.col-lg-3= render 'home/album', album: album

          #profile-tabs-top-tracks.tab-pane.fade.widget-followers
            - @artist.top_tracks(true).each do |track|
              = render 'home/track', track: track

          #profile-tabs-events.widget-article-comments.tab-pane.panel.no-padding.no-border.fade.in
            - @artist.events.each do |event|
              .comment
                = image_tag event.images['large'], class: 'comment-avatar'
                .comment-body
                  .comment-by
                    %a{:href => "#", :title => ""}= event.title
                    in
                    %a{:href => "#", :title => ""} #{event.venue.name}, #{event.venue.city} - #{event.venue.country}
                  .comment-text
                    = event.description.gsub('<![CDATA[', '').gsub(']]>', '').html_safe
            .clearfix
          #profile-tabs-similar.widget-article-comments.tab-pane.panel.no-padding.no-border.fade.in
            %ul.grid.cs-style-3.row
              - @artist.similar.each do |similar|
                %li.col-lg-3= render 'home/artist', artist: similar
