%div
  %img{ ng: { src: "{{(track.image[3]['#text'] || track.picture) || '#{image_url('demo/avatars/1.jpg')}'}}" }, alt: '{{track.name}}', class: 'follower-avatar' }
  .body
    .follower-controls
      %span.follower-username{ ng: { if: "track.playcount"}} {{track.playcount}} plays &nbsp;&nbsp;
      .btn-group
        %a.btn.btn-primary{ ng: { click: "addToPlaylist(track, true)", show: "!playing && (current_playitem.name != track.name || current_playitem.artist != track.artist) || (current_playitem.name != track.name{{track.playcount}} || current_playitem.artist != track.artist)" }, title: 'Play'}
          %i.fa.fa-play
        %a.btn.btn-primary{ ng: { click: "playVideo()", show: "!playing && (current_playitem.name == track.name && current_playitem.artist == track.artist)" }, title: 'Play'}
          %i.fa.fa-play
        %a.btn.btn-primary{ ng: { click: "pauseVideo()", show: "playing && (current_playitem.name == track.name && current_playitem.artist == track.artist)" }, title: 'Pause'}
          %i.fa.fa-pause
        %a.btn.btn-primary{ ng: { click: "addToPlaylist(track, false)" }, title: 'Add to playlist'}
          %i.fa.fa-indent
        %a.btn.btn-primary{ ng: { click: "showLyrics(track)" }, title: 'Show lyrics'}
          %i.fa.fa-file-text

    %a.follower-name.text-bg
      %strong {{track.name}}
      ({{track.duration | int_to_date | date:'mm:ss'}})
    %br/
    %a{ ng: { click: "go([(track.artist.name || track.artist)])" } } {{track.artist.name || track.artist}}

