%article.artists
  - @artists.in_groups_of(4, false) do |g|
    .row
      - g.each do |artist|
        .artist.col-md-3
          = link_to artist_root_path(artist['name'].gsub("&", "e").gsub("/", "+").gsub(' ', '+')) do
            = image_tag artist['pic_medium'], alt: artist['name'], title: artist['name']
