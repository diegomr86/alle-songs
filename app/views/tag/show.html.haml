.row-fluid
  .icon-left.text-center
    %i.fa.fa-user.text-xlg
  .search-result
    .col-md-12
    .panel.widget-followers
      .panel-heading
        %span.panel-title
          Top artists for
          %strong.text-primary {{tag.name}}
          tag
      .panel-body
        %ul.grid.cs-style-3.row
          %li.col-lg-3{ ng: { repeat: 'artist in tag.top_artists'} }
            = render 'home/artist'
