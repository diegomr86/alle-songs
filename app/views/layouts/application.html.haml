!!!
%html
  %head        
    - @page_title = "#{@artist['desc']} | Discografia online no AlleSongs"
    - @page_description = "#{@artist['desc']} - Ouça essa e milhares de outras discografias completas dos seus artistas preferidos. Online e grátis!"
    %title= @page_title
    %meta{content: @page_description, name: "description"}
    %meta{content: "letra, player online, discografia", name: "keywords"}


    %meta{content: "189790567873103", property: "fb:app_id"}
    %meta{content: "music.playlist", property: "og:type"}

    %meta{content: "AlleSongs", property: "og:site_name"}
    %meta{content: "► #{@page_title}", property: "og:title"}
    %meta{content: artist_custom_url(@artist["desc"]), property: "og:url"}
    %meta{content: "http://s2.vagalume.com#{@artist["pic_medium"]}" , property: "og:image"}
    %meta{content: @page_description, property: "og:description"}
    = favicon_link_tag "favicon.ico"
    = stylesheet_link_tag    "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css", media: "all"
    = stylesheet_link_tag    "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css", media: "all"
    = stylesheet_link_tag    "http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css", media: "all"
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Molle:400italic", media: "all"
    = stylesheet_link_tag    "http://fonts.googleapis.com/css?family=Molle:400italic", media: "all"
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "jquery"
    = javascript_include_tag "jquery_ujs"
    = javascript_include_tag "http://code.jquery.com/ui/1.10.3/jquery-ui.js"
    = javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"
    = javascript_include_tag "application", "data-turbolinks-track" => true    
    = csrf_meta_tags
  %body
    = render 'layouts/analytics'
    = render 'layouts/facebook'
    = render 'layouts/twitter'
    #wrap
      %header#header
        %nav.navbar.navbar-default{role: "navigation"}
          .navbar-header
            .navbar-brand
              = link_to root_path do
                %h1
                  Alle Songs
                  %sup
                    %i.icon-search
          %form.navbar-form.navbar-right#suggest_form{role: "search", action: artist_index_path}
            .form-group
              %input#suggest_input.form-control{placeholder: "Buscar artistas", type: "text", name: "artist"}
            %button.btn.btn-default{type: "submit"}
              %i.icon-search

      = yield
    %footer#footer
      .copy.pull-left
        AlleSongs
        %sup
          %i.icon-youtube-play
        |
        Discografias online
      .developed_by.pull-right
        Desenvolvido por
        = link_to "http://www.mtxwebart.com", target: "_blank" do
          %strong MTX

    = render 'layouts/plusone'

